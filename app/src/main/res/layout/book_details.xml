<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/title_textsize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_download" />
    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_add_favorite" />

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:id="@+id/tv_author_label"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:text="@string/label_author"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@+id/tv_author_label"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_author"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:id="@+id/tv_publisher_label"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@+id/tv_publisher_label"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_scanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_scanned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <TextView
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_textsize"
            android:textStyle="bold"
            android:text="@string/label_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/detail_textsize"
            android:id="@+id/tv_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
